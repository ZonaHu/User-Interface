<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment1"
        android:padding="16dp">

    <Switch
            android:text="@string/redImp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/importantFilter"
            app:layout_constraintEnd_toStartOf="@+id/button_addRandomNote" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/searchField"
            app:layout_constraintTop_toTopOf="@+id/searchField" tools:ignore="UseSwitchCompatOrMaterialXml"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/searchField"
            android:hint="@string/search" app:layout_constraintEnd_toStartOf="@+id/importantFilter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            tools:ignore="TouchTargetSizeCheck" />
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/button_addRandomNote"
            app:layout_constraintTop_toBottomOf="@+id/searchField"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" android:id="@+id/scrollView1">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/linearLayout_NoteList_NoteList"/>
    </ScrollView>
    <Button
            android:text="@string/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_clearNote"
            app:layout_constraintBottom_toTopOf="@+id/button_addRandomNote" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/button_addRandomNote"
            app:layout_constraintEnd_toEndOf="@+id/button_addRandomNote"/>
    <Button
            android:text="@string/random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_addRandomNote"
            app:layout_constraintTop_toBottomOf="@+id/button_clearNote"
            app:layout_constraintBottom_toTopOf="@+id/button_addNote"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_addNote"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_addRandomNote"
            app:layout_constraintStart_toStartOf="@+id/button_addRandomNote"
            app:layout_constraintEnd_toEndOf="@+id/button_addRandomNote"/>
</androidx.constraintlayout.widget.ConstraintLayout>